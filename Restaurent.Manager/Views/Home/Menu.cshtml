@{
    ViewData["Title"] = "Menu Page";
}

<div class="row">
    <div class="col-12 col-md-8">
        <div class="row pt-3">
            <div class="col-3 col-sm-3 col-md-12">
                <div class="toolbar h-100">
                    <div class="row m-0">
                        <div class="col-sm-12 col-md-3 options active">
                            <div class="img-content">
                                <img src="/images/icons/salad.png" />
                            </div>
                            <span>Salad</span>
                        </div>
                        <div class="col-sm-12 col-md-3 options">
                            <div class="img-content">
                                <img src="/images/icons/beef.png" />
                            </div><span>Beef</span>
                        </div>
                        <div class="col-sm-12 col-md-3 options">
                            <div class="img-content">
                                <img src="/images/icons/dessert.png" />
                            </div><span>Desserts</span>
                        </div>
                        <div class="col-sm-12 col-md-3 options">
                            <div class="img-content">
                                <img src="/images/icons/drinks.png" />
                            </div><span>Drinks</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-9 col-sm-9 col-md-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-4 pt-3">
                        <div class="card cursor-pointer dish-option">
                            <div class="card-body p-0">
                                <div style="height: 150px">
                                    <img src="/images/chopped-salad.jpg" style="height: 100%; width: 100%; object-fit:cover" />
                                </div>
                                <div class="p-1">
                                    <h4 class="text-center" style="text-wrap: nowrap; overflow: hidden; text-overflow: ellipsis">Chopper salad</h4>
                                    <span class="d-block text-center">100.000đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-4 pt-3">
                        <div class="card cursor-pointer dish-option">
                            <div class="card-body p-0">
                                <div style="height: 150px">
                                    <img src="/images/cucumber-salad.jpg" style="height: 100%; width: 100%; object-fit:cover" />
                                </div>
                                <div class="p-1">
                                    <h4 class="text-center" style="text-wrap: nowrap; overflow: hidden; text-overflow: ellipsis">Cucumber salad</h4>
                                    <span class="d-block text-center">150.000đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-4 pt-3">
                        <div class="card cursor-pointer dish-option">
                            <div class="card-body p-0">
                                <div style="height: 150px">
                                    <img src="/images/Fruit-Salad.jpg" style="height: 100%; width: 100%; object-fit:cover" />
                                </div>
                                <div class="p-1">
                                    <h4 class="text-center" style="text-wrap: nowrap; overflow: hidden; text-overflow: ellipsis">Fruit salad</h4>
                                    <span class="d-block text-center">200.000đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-4 pt-3">
                        <div class="card cursor-pointer dish-option">
                            <div class="card-body p-0">
                                <div style="height: 150px">
                                    <img src="/images/green-salad.jpg" style="height: 100%; width: 100%; object-fit:cover" />
                                </div>
                                <div class="p-1">
                                    <h4 class="text-center" style="text-wrap: nowrap; overflow: hidden; text-overflow: ellipsis">Green salad</h4>
                                    <span class="d-block text-center">90.000đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-4 pt-3">
                        <div class="card cursor-pointer dish-option">
                            <div class="card-body p-0">
                                <div style="height: 150px">
                                    <img src="/images/Veggie-Salad.jpg" style="height: 100%; width: 100%; object-fit:cover" />
                                </div>
                                <div class="p-1">
                                    <h5 class="text-center" style="text-wrap: nowrap; overflow: hidden; text-overflow: ellipsis">Veggie salad</h5>
                                    <span class="d-block text-center">140.000đ</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 pr-0 d-none d-md-block border-left" style="border-color: #00000080 !important;">
        <div class="pt-3" style="height: 100%; display: flex; flex-direction: column">
            <div>
                <div class="pb-1 mb-3 border-bottom" style="border-color: #00000080 !important">
                    <strong>Bàn 10</strong>
                </div>
                <div class="cart my-1">
                    <div class="cart-body p-0 bg-white" style="border-radius: 5px; overflow: hidden">
                        <div class="d-flex" style="width: 100%;">
                            <div style="height: 100px; width: 100px">
                                <img src="/images/Veggie-Salad.jpg" style="height: 100%; width: 100%; object-fit:cover" />
                            </div>
                            <div class="pl-3" style="flex: 1">
                                <h5 style="text-wrap: nowrap; overflow: hidden; text-overflow: ellipsis">Veggie salad</h5>
                                <span class="d-block">140.000đ</span>
                                <div class="d-flex mt-2">
                                    <div class="quantity-ip">
                                        <span class="d-inline-block cursor-pointer">-</span>
                                        <span class="d-inline-block">1</span>
                                        <span class="d-inline-block cursor-pointer">+</span>
                                    </div>
                                    <div class="text-right pr-3" style="flex: 1">
                                        <span class="cursor-pointer">
                                            <img src="/images/icons/trash.png" width="20" height="20" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cart my-1">
                    <div class="cart-body p-0 bg-white" style="border-radius: 5px; overflow: hidden">
                        <div class="d-flex" style="width: 100%;">
                            <div style="height: 100px; width: 100px">
                                <img src="/images/Fruit-Salad.jpg" style="height: 100%; width: 100%; object-fit:cover" />
                            </div>
                            <div class="pl-3" style="flex: 1">
                                <h5 style="text-wrap: nowrap; overflow: hidden; text-overflow: ellipsis">Fruit salad</h5>
                                <span class="d-block">200.000đ</span>
                                <div class="d-flex mt-2">
                                    <div class="quantity-ip">
                                        <span class="d-inline-block cursor-pointer">-</span>
                                        <span class="d-inline-block">2</span>
                                        <span class="d-inline-block cursor-pointer">+</span>
                                    </div>
                                    <div class="text-right pr-3" style="flex: 1">
                                        <span class="cursor-pointer">
                                            <img src="/images/icons/trash.png" width="20" height="20" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="flex: 1; padding-top: 1rem; display: flex; flex-direction: column; justify-content: end;">
                <div class="border-top" style="border-color: #00000080 !important">
                    <div class="d-flex mt-3">
                        <h5>Total</h5>
                        <h5 style="flex: 1;" class="text-right">340.000đ</h5>
                    </div>
                    <div class="mt-3 d-flex">
                        <div style="flex: 1" class="mr-1">
                            <button class="btn btn-primary w-100">Save order</button>
                        </div>
                        <div style="flex: 1" class="ml-1">
                            <a class="btn btn-success w-100 payment-button" href="@Url.Action("PaymentModal", "Home")">Payment now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>