@model Restaurent.Manager.Models.Datas.Food

<div class="row">
    <div class="col-6 pr-0">
        <img src="@Model.Image" style="height: 100%; width: 100%; object-fit: cover"/>
    </div>
    <div class="col-6 py-3">
        <div style="padding-right: 15px; height: 100%" class="d-flex">
            <div class="m-auto" style="width: 85%">
                <h3>@Model.Name</h3>
                <div>
                    <label>@Model.Price.FormatCurrency()</label>
                    <p>@Html.Raw(Model.Description)</p>
                </div>
                <div>
                    <label>Note</label>
                    <textarea class="form-control add-food-to-billnote"></textarea>
                </div>
                <div class="d-flex mt-3" style="width: 100%">
                    <div class="m-auto">
                        <span class="cursor-pointer quantity-btn minus" data-focus=".modal-add-quantity">-</span>
                        <span class="d-inline-block modal-add-quantity" style="padding: 0 5px">1</span>
                        <span class="cursor-pointer quantity-btn bonus" data-focus=".modal-add-quantity">+</span>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-success btn-add-new-food-to-bill w-100" data-id="@Model.Id" data-name="@Model.Name" data-price="@Model.Price" data-pricestr="@Model.Price.FormatCurrency()" data-img="@Model.Image">Add to cart</button>
                </div>
            </div>
        </div>
    </div>
</div>