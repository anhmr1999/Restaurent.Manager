@model Restaurent.Manager.Models.Datas.Food

<div class="modal-body">
    <form action="@Url.Action("Save", "Dish")" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="@Model.Id"/>
        <div class="row">
            <div class="col-9">
                <div class="d-flex">
                    <div class="avt-image">
                        <img src="@(!string.IsNullOrEmpty(Model.Image) ? Model.Image : "/images/no-image.png")" id="img-d" />
                        <input type="file" class="d-none" accept=".png,.jpg" name="imageFile" id="img-input" />
                    </div>
                    <div class="pl-3" style="flex: 1">
                        <label>Name</label>
                        <input class="form-control" placeholder="Dish name" name="name" value="@Model.Name" />
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="pt-3">
                    <div class="text-left">
                        <input type="radio" value="true" name="status" id="dish-status-true" @(Model.Status ? "checked" : "") />
                        <label class="m-0" for="dish-status-true">Served</label>
                    </div>
                    <div class="text-left mt-2">
                        <input type="radio" value="false" name="status" id="dish-status-false" @(!Model.Status ? "checked" : "") />
                        <label class="m-0" for="dish-status-false">Sold out</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <div class="row mb-1">
                    <label class="col-4">Type</label>
                    <div class="col-8">
                        <select name="typeId" class="form-control form-control-sm">
                            @if (Model.TypeId == 1)
                            {
                                <option value="1" selected> -- Salad -- </option>
                            }
                            else
                            {
                                <option value="1"> -- Salad -- </option>
                            }
                            @if (Model.TypeId == 2)
                            {
                                <option value="2" selected> -- Beef -- </option>
                            }
                            else
                            {
                                <option value="2"> -- Beef -- </option>
                            }
                            @if (Model.TypeId == 3)
                            {
                                <option value="3" selected> -- Desserts -- </option>
                            }
                            else
                            {
                                <option value="3"> -- Desserts -- </option>
                            }
                            @if (Model.TypeId == 4)
                            {
                                <option value="4" selected> -- Drinks -- </option>
                            }
                            else
                            {
                                <option value="4"> -- Drinks -- </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-1">
                    <label class="col-4">Description</label>
                    <div class="col-8">
                        <textarea class="form-control form-control-sm" rows="2" name="description" placeholder="dish textarea">@Model.Description</textarea>
                    </div>
                </div>
                <div class="row mb-1">
                    <label class="col-4">Price</label>
                    <div class="col-8">
                        <input class="form-control form-control-sm" type="number" name="price" value="@Model.Price" />
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 row">
            <div class="col-6">
                <a href="#" class="btn btn-danger w-100" data-dismiss="modal" aria-label="Close">Cancel</a>
            </div>
            <div class="col-6">
                <button class="btn btn-save btn-success w-100">Save</button>
            </div>
        </div>
    </form>
</div>