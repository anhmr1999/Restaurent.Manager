<div class="modal-body">
    <div class="row">
        <div class="col-9">
            <div class="d-flex">
                <div class="avt-image">
                    <img src="~/images/no-image.png" />
                </div>
                <div class="pl-3" style="flex: 1">
                    <label>Name</label>
                    <input class="form-control" placeholder="Dish name" />
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="pt-3">
                <div class="text-left">
                    <input type="radio" value="true" name="dish-status" id="dish-status-true" checked />
                    <label class="m-0" for="dish-status-true">Served</label>
                </div>
                <div class="text-left mt-2">
                    <input type="radio" value="false" name="dish-status" id="dish-status-false" />
                    <label class="m-0" for="dish-status-false">Sold out</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="row mb-1">
                <label class="col-4">Type</label>
                <div class="col-8">
                    <select class="form-control form-control-sm">
                        <option value="1"> -- Salad -- </option>
                        <option value="2"> -- Beef -- </option>
                        <option value="3"> -- Desserts -- </option>
                        <option value="4"> -- Drinks -- </option>
                    </select>
                </div>
            </div>
            <div class="row mb-1">
                <label class="col-4">Description</label>
                <div class="col-8">
                    <textarea class="form-control form-control-sm" rows="2" placeholder="dish textarea"></textarea>
                </div>
            </div>
            <div class="row mb-1">
                <label class="col-4">Price</label>
                <div class="col-8">
                    <input class="form-control form-control-sm" type="number" />
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3 row">
        <div class="col-6">
            <button class="btn btn-danger w-100" data-dismiss="modal" aria-label="Close">Cancle</button>
        </div>
        <div class="col-6">
            <button class="btn btn-success w-100">Save</button>
        </div>
    </div>
</div>