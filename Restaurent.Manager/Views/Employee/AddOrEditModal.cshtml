@model Restaurent.Manager.Models.Datas.User

<div class="modal-body">
   <form action="@Url.Action("Save", "Employee")" method="post" enctype="multipart/form-data">
       <input type="hidden" name="id" value="@Model.Id"/>
        <div class="row">
            <div class="col-9">
                <div class="d-flex">
                    <div class="avt-image border-radius">
                        <img src="@(!string.IsNullOrEmpty(Model.Avatar) ? Model.Avatar : "/images/no-image.png")" class="cursor-pointer" id="img-d"/>
                        <input type="file" accept=".png,.jpg" name="avatarFile" class="d-none" id="img-input"/>
                    </div>
                    <div class="pl-3" style="flex: 1">
                        <label>Fullname</label>
                        <input class="form-control" name="name" placeholder="Nguyen Van A" value="@Model.Name"/>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="pt-3">
                    <span class="role-button cursor-pointer @(Model.Role?.ToLower() == "waiter" ? "active" : "")" data-role="Waiter">Waiter</span>
                    <span class="role-button cursor-pointer mt-2 @(Model.Role?.ToLower() == "chef" ? "active" : "")" data-role="Chef">Chef</span>
                </div>
                <input name="role" value="@Model.Role" id="role-ip" type="hidden"/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-9">
                <div class="row mb-1">
                    <label class="col-4">Email</label>
                    <div class="col-8">
                        <input class="form-control form-control-sm" placeholder="@@gmail.com" name="email" value="@Model.Email"/>
                    </div>
                </div>
                <div class="row mb-1">
                    <label class="col-4">Password</label>
                    <div class="col-8">
                        <input class="form-control form-control-sm" type="password" name="password"/>
                    </div>
                </div>
                <div class="row mb-1">
                    <label class="col-4">Date of birth</label>
                    <div class="col-8">
                        <input class="form-control form-control-sm" type="date" name="birthday" value="@Model.Birthday?.ToString("yyyy-MM-dd")"/>
                    </div>
                </div>
                <div class="row">
                    <label class="col-4">Phone</label>
                    <div class="col-8">
                        <input class="form-control form-control-sm" name="phone" placeholder="xxx xxx xxxx" value="@Model.Phone"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 row">
            <div class="col-6">
                <a href="#" class="btn btn-danger w-100" data-dismiss="modal" aria-label="Close">Cancel</a>
            </div>
            <div class="col-6">
                <button class="btn btn-success btn-save-employee w-100">Save</button>
            </div>
        </div>
   </form>
</div>