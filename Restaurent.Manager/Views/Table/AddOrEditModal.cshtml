@model Restaurent.Manager.Models.Datas.Table

<div class="modal-body">
    <form action="@Url.Action("Save", "Table")">
        <input type="hidden" name="id" value="@Model.Id"/>
        <div class="row">
            <div class="col-9">
                <label>Name</label>
                <input class="form-control" placeholder="Table name..." name="name" value="@Model.Name"/>
            </div>
            <div class="col-3">
                <div class="pt-3">
                    <div class="text-left">
                        <input type="radio" value="true" name="dish-status" id="dish-status-true" @(Model.Status ? "checked" : "" ) />
                        <label class="m-0" for="dish-status-true">Can use</label>
                    </div>
                    <div class="text-left mt-2">
                        <input type="radio" value="false" name="dish-status" id="dish-status-false" @(!Model.Status ? "checked" : "") />
                        <label class="m-0" for="dish-status-false">Disable</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3 row">
            <div class="col-6">
                <a href="#" class="btn btn-danger w-100" data-dismiss="modal" aria-label="Close">Cancel</a>
            </div>
            <div class="col-6">
                <button class="btn btn-success w-100">Save</button>
            </div>
        </div>
    </form>
</div>